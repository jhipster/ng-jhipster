{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "ng-jhipster",
  "description": "A Jhipster util library for Angular 2",
  "repository": {
    "type": "git",
    "url": "https://github.com/jhipster/ng-jhipster.git"
  },
  "keywords": [
    "jhipster",
    "angular",
    "angular2"
  ],
  "author": "Deepu KS",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jhipster/generator-jhipster/issues"
  },
  "homepage": "https://www.jhipster.tech",
  "peerDependencies": {
    "@angular/core": "^7.0.0",
    "@angular/router": "^7.0.0",
    "@angular/common": "^7.0.0",
    "@angular/forms": "^7.0.0",
    "@ng-bootstrap/ng-bootstrap": "^4.0.0",
    "@ngx-translate/core": "^11.0.1",
    "@ngx-translate/http-loader": "^4.0.0",
    "@fortawesome/angular-fontawesome": "^0.3.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.12",
    "@fortawesome/free-solid-svg-icons": "^5.6.3",
    "rxjs": "^6.3.3"
  },
  "devDependencies": {
    "@angular/animations": "^7.0.0",
    "@angular/common": "^7.0.0",
    "@angular/compiler": "^7.0.0",
    "@angular/compiler-cli": "^7.0.0",
    "@angular/core": "^7.0.0",
    "@angular/forms": "^7.0.0",
    "@angular/http": "^7.0.0",
    "@angular/platform-browser": "^7.0.0",
    "@angular/platform-browser-dynamic": "^7.0.0",
    "@angular/platform-server": "^7.0.0",
    "@angular/router": "^7.0.0",
    "@fortawesome/angular-fontawesome": "^0.3.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.12",
    "@fortawesome/free-solid-svg-icons": "^5.6.3",
    "@ng-bootstrap/ng-bootstrap": "^4.0.0",
    "@ngx-translate/core": "^11.0.1",
    "@ngx-translate/http-loader": "^4.0.0",
    "@types/node": "^10.12.18",
    "codelyzer": "^4.5.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-preset-angular": "^6.0.2",
    "lint-staged": "^8.1.0",
    "ng-packagr": "^4.4.5",
    "prettier": "^1.16.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "~6.3.3",
    "tsickle": "^0.34.0",
    "tslint": "^5.12.0",
    "typescript": "~3.1.6",
    "zone.js": "~0.8.26"
  },
  "version": "0.7.0",
  "ngPackage": {
    "lib": {
      "entryFile": "src/public_api.ts"
    }
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/tests/setupJest.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tests/tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "testMatch": [
      "<rootDir>/tests/**/*.spec.ts"
    ]
  },
  "lint-staged": {
    "{,src/**/}*.{md,json,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "format": "prettier --write \"{,src/**/}*.{md,json,ts}\"",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --project tsconfig.json --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "ng-packagr -p package.json",
    "release": "npm test && git push && git push --tags && npm publish dist/",
    "release:patch": "npm run build && npm version patch -a -m \"Update to %s\" && npm run release",
    "release:minor": "npm run build && npm version minor -a -m \"Update to %s\" && npm run release",
    "release:major": "npm run build && npm version major -a -m \"Update to %s\" && npm run release"
  }
}
